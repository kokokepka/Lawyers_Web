<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Гомельская городская коллегия адвокатов</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/menu.css" />
    @*<link href="https://fonts.googleapis.com/css2?family=Pattaya&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Cormorant+Infant:wght@700&display=swap" rel="stylesheet">*@
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Infant&family=Pattaya&family=Source+Serif+Pro&display=swap" rel="stylesheet">
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark box-shadow text-uppercase font-weight-bold" 
             style="font-family: 'Cormorant Infant', serif; font-size:18px">
            <a class="navbar-brand text-light" href="#">
                <img src="~/img/libra.png" width="30" height="30" class="d-inline-block align-top" alt="" loading="lazy">
                Адвокаты
            </a>
            <div class="container">
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light my_link" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light my_link" asp-area="" asp-controller="Account" asp-action="PrivateOffice">Личный кабинет</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light my_link" asp-area="" asp-controller="Home" asp-action="KindLawyerHelp">Виды юрпомощи</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light my_link" asp-area="" asp-controller="Home" asp-action="Price">Прайс</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-light my_link" asp-area="" asp-controller="Home" asp-action="AllQuestions">Вопрос/Ответ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light my_link" asp-area="" asp-controller="Home" asp-action="AllComments">Отзывы</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light my_link" asp-area="" asp-controller="Home" asp-action="AllLowyers">Контакты</a>
                        </li>
                    </ul>
                </div>
                <div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="badge badge-light" title="Выход" asp-area="" asp-controller="Account" asp-action="Logoff">
                            <img src="~/img/enter.png" class="d-inline-block align-content-center" alt="">
                        </a>
                    }
                    else
                    {
                        <a class="badge badge-light" title="Вход" asp-area="" asp-controller="Account" asp-action="Login">
                            <img src="~/img/exit.png" class="d-inline-block align-content-center" alt="">
                        </a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid p-0 m-0" id="fon">
        <main role="main" class="pb-0">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/mybundle.js" asp-append-version="true"></script>
    @*<script src="~/js/office.js"></script>*@
    <script src="~/lib/bundle.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
