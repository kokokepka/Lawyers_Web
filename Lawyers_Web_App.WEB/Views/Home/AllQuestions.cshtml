@model IEnumerable<Lawyers_Web_App.WEB.Models.Other.QuestionViewModel>
@{
    ViewData["Title"] = "Вопросы";
}
<div class="row justify-content-center">
    <div class="col-md-auto">
        <h4>Вопросы</h4>
    </div>
</div>
@if (Model.Count() != 0)
{
    @foreach (var item in Model)
    {
        <div class="row justify-content-center">
            <div class="col-md-8  offset-md-2">
                <div class="card w-75">
                    <div class="card-body">
                        <h5 class="card-header">От @item.Name</h5>
                        <p class="card-body">@item.Text</p>
                        <p class="card-footer">@item.DateTime.ToString()</p>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("main-lawyer"))
                        {
                            <a asp-action="AnswerTheQuestion" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger">Ответить</a>
                            <a asp-action="DeleteComment" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger">Удалить</a>
                        }
                    </div>
                </div>
            </div>
        </div>
        @if (item.Answers != null)
        {
            foreach (var ans in item.Answers)
            {
                <div class="row justify-content-center">
                    <div class="col-md-8  offset-md-3">
                        <div class="card w-75">
                            <div class="card-body">
                                <h5 class="card-header">Ответ: </h5>
                                <p class="card-body">@ans.Answer</p>
                                <p class="card-footer">@ans.DateTime.ToString()</p>
                                @if (User.Identity.IsAuthenticated && User.IsInRole("main-lawyer"))
                                {
                                    <a asp-action="DeleteComment" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger">Удалить</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    }
}
else
{
    <div class="row justify-content-center">
        <div class="col-md-auto">
            <h4>Вопросов пока нет. Если вас что то интересует, то не стесняйтесь задать вопрос.</h4>
        </div>
    </div>
}
<br />
@if (!User.Identity.IsAuthenticated)
{
    <div class="row">
        <div class="col-md-6 offset-md-3" id="addComment">
            <a class="btn btn-primary" asp-action="AskQuestion" asp-controller="Home"
               method="get"
               data-ajax="true"
               data-ajax-update="#addComment"
               data-ajax-mode="replace"
               data-ajax-method="get">Задать вопрос</a>
        </div>
    </div>
}

