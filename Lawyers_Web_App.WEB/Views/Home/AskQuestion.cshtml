@model Lawyers_Web_App.WEB.Models.Other.QuestionViewModel

@{
    ViewData["Title"] = "AskQuestion";
}

<h4>Задайте вопрос</h4>
<hr />
<div class="row">
    <div class="col-md-auto">
        <form asp-action="AskQuestion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <textarea asp-for="Text" class="form-control" rows="4">Задайте вопрос</textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Отправить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
