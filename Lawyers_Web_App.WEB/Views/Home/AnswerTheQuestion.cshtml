@model Lawyers_Web_App.WEB.Models.Other.AnswerModel

<hr />
<div class="row">
    <div class="col-md-auto">
        <form asp-action="AnswerTheQuestion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <textarea asp-for="Text" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ответить" class="btn btn-light" />
            </div>
            <div class="form-group">
                <input asp-for="QuestionId" class="form-control" type="hidden" value="@Model.QuestionId" />
            </div>
        </form>
    </div>
</div>
